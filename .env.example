# Database Configuration (Local Development)
DB_URL=jdbc:postgresql://localhost:5432/uber_db
DB_USERNAME=postgres
DB_PASSWORD=postgres
DDL_AUTO=create-drop

# JWT Configuration
# Generate a secure secret key (minimum 256 bits recommended)
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-please-change-this-in-production

# Database Configuration (Docker)
POSTGRES_USER=uber
POSTGRES_PASSWORD=uber
POSTGRES_DB=uber_db

# Email Configuration
# For Gmail: Use your Gmail address and an App Password (not your regular password)
# To generate an App Password: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password